#include<bits/stdc++.h>
using namespace std;

bool visite[100005];
int dist[100005];

int main()
{

    freopen("input.text","r",stdin);
    freopen("output.text","w",stdout);

    int t,source=2,u,n;
    cin >> t;
    while(t--)
    {
        memset(dist,0,sizeof(dist));
        memset(visite,false,sizeof(visite));


        vector<int>vec[100004];
        int m,n;
        cin >> n >> m;
        for(int i=0;i<m;i++)
        {
            int a,b;
            cin >> a >> b;
            vec[a].push_back(b);
            vec[b].push_back(a);
        }
            queue<int>q;

        visite[source]=true;
        dist[source]=0;
        q.push(source);
        while(!q.empty())
        {
            u=q.front();
            q.pop();
            for (int i=0; i<vec[u].size(); i++)
            {
                if(visite[vec[u][i]]==0)
                {
                    visite[vec[u][i]]=1;
                    q.push(vec[u][i]);
                    dist[vec[u][i]]=dist[u]+1;
                }
            }
        }

    for(int i=1;i<=n;i++)
        printf("\nDistance from %d to %d = %d ",source,i,dist[i]);

    }


    return 0;
}
